mixin g-nav(context = {})
    //-
        Documentation on styles: http://v4-alpha.getbootstrap.com/components/navs/
    
        NavItem
        {
            link: String | Object
        }

        Nav
        {
            [items: Array<NavItem>,]
            [links: Array<String | Object>]
        }
    
    if context.items
        ul.nav&attributes(attributes, attrs(context))
            each item in (context.items || [])
                li.nav-item&attributes(attrs(item))
                    - link = isShorthand(item) ? {'content': item} : item.link;
                    
                    a.nav-link(href="javascript:void(0)")&attributes(attrs(link))
                        +u-contents(link)
    else if context.links
        nav.nav&attributes(attributes, attrs(context))
            each link in (context.links || [])
                a.nav-link(href="javascript:void(0)")&attributes(attrs(link))
                    +u-contents(link)