//- Custom Configuration
block config
    //- Setup site's base URL to match the "baseUrl" key within `package.json`
    //- Otherwise default to relative pathing
    - baseUrl = config.baseUrl || './'

include ../../utilities/includes
include ../../utilities/helpers
include ../../utilities/contents

doctype html

<!--[if lt IE 9]>
<html class="lt-ie9 no-js" lang="en">
<![endif]-->
<!--[if gte IE 9]><!-->
<html class="no-js" lang="en">
<!--<![endif]-->

head
    meta(charset="utf-8")
    meta(class= prefix('breakpoint'))
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name="description" content= page && page.description ? page.description : data.global.description)
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    title= page && page.title ? page.title : data.global.title

    block styles
        link(rel="stylesheet", href= baseUrl + "styles/main.vendor.css")
        link(rel="stylesheet", href= baseUrl + "styles/main.custom.css")

body
    +g-legacy

    .hidden-xs-up
        include ../../sprite.svg

    block body

    block scripts
        script(src= baseUrl + "scripts/main.js")

</html>