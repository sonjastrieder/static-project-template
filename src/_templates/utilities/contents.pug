mixin u-contents(context = {})
    if isShorthand(context)
        != context
    else if isObject(context)
        each val, key in context
            if /^content(~[\d]+)?$/.test(key)
                != val
            else if /^contents(~[\d]+)?$/.test(key)
                each content in val
                    +u-contents(content)
            else if /^\+/.test(key)
                -
                    let [, template] = /\+([\w-]+)/.exec(key);
                    let attributes = key.match(/([~#\.][\w-]+)/g) || {};
                    
                    if(!!attributes.length) {
                        attributes.forEach((arg) => {
                            if(/#/.test(arg)) {
                                attributes.id = arg.slice(1);
                            } else if(/\./.test(arg)) {
                                attributes.class = attributes.class ? `${attributes.class} ${arg.slice(1)}` : arg.slice(1);
                            }
                        });
                    }
                if /-/.test(template)
                    +#{template}(val)(class= attributes.class, id= attributes.id)
                else
                    #{template}(class= attributes.class, id= attributes.id)&attributes(attrs(val.attributes))
                        +u-contents(val)