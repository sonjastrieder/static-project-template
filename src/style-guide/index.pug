extends ../_templates/layouts/shell

append config
    -
        self.page = {
            'title': 'Style Guide',
            'class': 'style-guide'
        };

block content

    mixin p-label(context = {})
        label(class= prefix('label'))&attributes(attrs(context))
            +u-contents(context)

    mixin p-style-guide-item(context = {})
        div(data-style-guide-item, class= prefix('style-guide-item'))
            block
            .fs-style-guide-item-html
                button#test-id.btn.btn-primary Copy
                pre.language-html
                    code.language-html

    .container-fluid
        .row
            .container
                .row
                    .col-xs-12
                        h1 Style Guide
                .row
                    .col-xs-12
                        h2 Global
                    .col-xs-12
                        +p-label('Typography')
                        +p-style-guide-item()
                            h1.display-1 Display Headline 1
                        +p-style-guide-item()
                            h1.display-2 Display Headline 2
                        +p-style-guide-item()
                            h1.display-3 Display Headline 3
                        +p-style-guide-item()
                            h1.display-4 Display Headline 4
                        +p-style-guide-item()
                            h1 Headline 1b
                        +p-style-guide-item()
                            h2
                                | Headline 2
                                small.text-muted Secondary
                        +p-style-guide-item()
                            h3
                                | Headline 3
                                small.text-muted Secondary
                        +p-style-guide-item()
                            h4
                                | Headline 4
                                small.text-muted Secondary
                        +p-style-guide-item()
                            h5
                                | Headline 5
                                span.text-muted Secondary
                        +p-style-guide-item()
                            h6
                                | Headline 6
                                span.text-muted Secondary
                        +p-style-guide-item()
